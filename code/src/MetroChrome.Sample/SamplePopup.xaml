<UserControl x:Class="MetroChrome.Sample.SamplePopup"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:metro="http://metrochrome.github.com/"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" 
             Width="300"
             metro:ThemeManager.ThemeTone="Dark"
             metro:ThemeManager.AccentColor="Lime"
             Background="{DynamicResource MetroBackground1Brush}"
>
    <Grid>
        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="Segoe UI" FontSize="24" Foreground="{DynamicResource MetroForeground1Brush}" Text="sample popup" />
    </Grid>
</UserControl>
